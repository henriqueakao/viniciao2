@model DrugStore.Models.Compra

@{
    ViewData["Title"] = "Create";
}

<h1>Comprar</h1>

<h4>Compra</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
